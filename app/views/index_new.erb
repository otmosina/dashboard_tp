    <script src="javascripts/application.js"></script>
      <script type="text/javascript">
        refreshInreval = 1000*60*3
        setInterval(refreshPage, refreshInreval);
        $().ready(function(){
          drawGraphs();
        });
        function refreshPage(){
          location.reload();
        }
        function drawGraphs(){

          Draw_AffSearches(<%= @data_aff_searches%>, $("#Bar_AffSearches"), 2500 );
          Draw_AffSearches(<%= @data_aff_clicks%>, $("#Bar_AffClics") , 200);
          Draw_AffSearches(<%= @data_aff_paidbookings%>, $("#Bar_AffPaidbookings"), 18 );

        };
      </script>
  </body>
</html>
